<%- include('./layout/header.ejs') %>
<div class="">
  <div class="row min-vh-100">
    <div class="col-sm-2">
      <div class="d-flex flex-column min-vh-100">
        <div>
          <a href="/job-requirement/<%= jobId %>">JOB REQUIREMENT</a>
        </div>
        <div>
          <a href="/job-details/<%= jobId %>">JOB DETAILS</a>
        </div>
        <div>
          <a href="/exam/<%= jobId %>">EXAM</a>
        </div>
        <div class="mt-auto">
          <h3>BACK TO JOB PAGE</h3>
        </div>
      </div>
    </div>
    <div class="col-sm-10">
      <h4>CREATE JOB DETAILS</h4>
      <% for (let i = 0; i < job.length; i++) { %>
      <h3><%= job[i].job_title %></h3>
      <div>
        <label for="role"><h3>Role</h3></label>
        <div class="">
          <% if(jobDetail != 0) { %> <% for (let j = 0; j < jobDetail.length;
          j++) { %>
          <form action="/edit-role/<%= jobId %>" method="post">
            <input
              type="text"
              name="role"
              placeholder="Enter a Role"
              value="<%= jobDetail[j].role %>"
            />
            <button>/</button>
          </form>
          <% } %> <% } else { %>
          <form action="/add-role/<%= jobId %>" method="post">
            <input type="text" name="role" placeholder="Enter a Role" />
            <button>+</button>
          </form>
          <% } %>
        </div>
      </div>
      <% } %>
      <div>
        <h3>Responsibility</h3>
        <% for(let i = 0; i < jobResponsibility.length; i++) { %>
        <div class="input-container">
          <input
            type="text"
            name="responsibility_item"
            value="<%= jobResponsibility[i].responsibility_detail %>"
            onchange="addUpdateBtn('<%= jobId %>', 'responsibility', '<%= jobResponsibility[i].responsibility_id%>')"
          />
          <form
            class="delete-btn"
            style="display: inline"
            action="/deleteResponsibility/<%= jobId %>/<%= jobResponsibility[i].responsibility_id %>"
            method="post"
          >
            <button type="submit">x</button>
          </form>
        </div>
        <% } %>
        <form action="/addResponsibility/<%= jobId %>" method="post">
          <div class="mb-4">
            <input
              type="text"
              name="responsibility_detail"
              placeholder="Enter a responsibility"
              required
            />
            <button type="submit">+</button>
          </div>
        </form>
      </div>
      <div>
        <h3>Qualification</h3>
        <% for(let i = 0; i < jobQualification.length; i++) { %>
        <div class="input-container">
          <input
            type="text"
            name="qualification_item"
            value="<%= jobQualification[i].qualification_detail%>"
            onchange="addUpdateBtn('<%= jobId %>', 'qualification', '<%= jobQualification[i].qualification_id%>')"
          />
          <form
            class="delete-btn"
            style="display: inline"
            action="/deleteQualification/<%= jobId %>/<%= jobQualification[i].qualification_id %>"
            method="post"
          >
            <button type="submit">x</button>
          </form>
        </div>
        <% } %>
        <form action="/addQualification/<%= jobId %>" method="post">
          <div class="mb-4">
            <input
              type="text"
              name="qualification_detail"
              placeholder="Enter a qualification"
              required
            />
            <button type="submit">+</button>
          </div>
        </form>
      </div>

      <% for (let i = 0; i < jobCategory.length; i++) { %>
      <div>
        <h3><%= jobCategory[i].category_detail %></h3>
        <% for (let j = 0; j < jobCategoryItem.length; j++) { %> <%
        if(jobCategory[i].category_id == jobCategoryItem[j].category_id) { %>
        <div class="input-container">
          <input
            type="text"
            name="<%= jobCategory[i].category_detail %>_item"
            value="<%= jobCategoryItem[j].item_detail %>"
            onchange="addUpdateBtn('<%= jobId %>', '<%= jobCategory[i].category_id %>', '<%= jobCategoryItem[j].item_id %>')"
          />
          <form
            class="delete-btn"
            style="display: inline"
            action="/delete/job-<%= jobId %>/category-<%= jobCategory[i].category_id %>/item-<%= jobCategoryItem[j].item_id %>"
            method="post"
          >
            <button type="submit">x</button>
          </form>
        </div>
        <% } %> <% } %>
        <form
          action="/add/<%= jobId %>/<%= jobCategory[i].category_id %>"
          method="post"
        >
          <div class="mb-4">
            <input
              type="text"
              name="item"
              placeholder="Enter a <%= jobCategory[i].category_detail %>"
              required
            />
            <button type="submit">+</button>
          </div>
        </form>
      </div>
      <% } %>
      <form action="/add-category/<%= jobId %>" method="post">
        <div class="mb-4">
          <input
            type="text"
            name="categoryDetail"
            placeholder="Add a category"
            required
          />
          <button type="submit">+</button>
        </div>
      </form>
    </div>
  </div>
</div>
<script>
  function addUpdateBtn(jobid, categoryName, itemId) {
    const delBtn = document.querySelector('.delete-btn');
    const allDelBtn = document.querySelectorAll('.delete-btn');
    const inputContainer = document.querySelectorAll('.input-container');
    const oldUpdateBtn = document.querySelectorAll('.update-btn');
    const form = document.createElement('form');
    const button = document.createElement('button');

    // avoids excessive adding of update button
    inputContainer.forEach((container) => {
      oldUpdateBtn.forEach((btn) => {
        if (
          container.lastChild == btn &&
          btn.getAttribute('action') ==
            `/update/job-${jobid}/${categoryName}/${itemId}`
        ) {
          container.removeChild(container.lastChild);
        }
      });
    });

    // creates the update button form
    form.setAttribute(
      'action',
      `/update/job-${jobid}/category-${categoryName}/item-${itemId}`
    );
    form.setAttribute('method', 'post');
    form.setAttribute('style', 'display: inline;');
    form.classList.add('update-btn');
    button.setAttribute('type', 'submit');
    button.textContent = 'update';
    form.appendChild(button);

    // places the update button on corresponding item
    allDelBtn.forEach((btn) => {
      if (
        btn.getAttribute('action') ==
          `/deleteResponsibility/${jobid}/${itemId}` ||
        btn.getAttribute('action') ==
          `/deleteQualification/${jobid}/${itemId}` ||
        btn.getAttribute('action') ==
          `/delete/job-${jobid}/category-${categoryName}/item-${itemId}`
      ) {
        btn.parentNode.appendChild(form);
      }
    });
  }
</script>
<%- include('./layout/footer.ejs') %>

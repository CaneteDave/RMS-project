<%- include('./layout/header.ejs') %>
<div class="">
  <div class="row min-vh-100">
    <div class="col-sm-2">
      <div class="d-flex flex-column min-vh-100">
          <div>
            <a href="/job-requirement/<%= jobId %>">JOB REQUIREMENT</a>
          </div>
          <div>
            <a href="/job-details/<%= jobId %>">JOB DETAILS</a>
          </div>
          <div>
            <a href="/exam/<%= jobId %>">EXAM</a>
          </div>
        <div class="mt-auto">
          <h3>BACK TO JOB PAGE</h3>
        </div>
      </div>
    </div>
    <div class="col-sm-10">
      <h4>CREATE JOB DETAILS</h4>
      <% for (let i = 0; i < job.length; i++) { %>
      <form class="" action="/job-details/<%= job[i].job_id %>" method="post">
        <h3><%= job[i].job_title %></h3>
        <div>
          <label for="role"><h3>Role</h3></label>
          <div>
          <div class="">
            <input
              type="text"
              name="role"
              placeholder="Enter a Role"
              <% if (jobDetail != 0) { %> 
              value="<%= jobDetail[i].role %>"
              <% } %> 
            >
          </div>
        </div>
        <div>
          <div class="">
            <label for="responsiDesc"><h3>Responsibility</h3></label>
              <div class="list">
                <input
                type="search"
                name="responsibility_1"
                placeholder="Enter a responsibility"
                <% if (jobDetail != 0) { %>
                  value="<%= jobDetail[i].responsibility_1 %>"
                  <% } %>
                />
                <button class="add" value="add_responsibility_btn">+</button>
            </div>
          </div>
          <div>
            <label for="qualiDesc"><h3>Qualification</h3></label>
            <div>
              <input
                type="search"
                name="qualification_1"
                placeholder="Enter a qualification"
                <% if (jobDetail != 0) { %>
                  value="<%= jobDetail[i].qualification_1 %>"
                  <% } %>
              />
              <button name="button" value="qualificationBtn">+</button>
            </div>
          </div>

          <input type="text" name="category" placeholder="Add a category" >
          <button name="button" value="categoryBtn">+</button>
          <div><button name="button" value="saveBtn">SAVE</button></div>
        </div>
      </form>
      <% } %>
    </div>
  </div>
</div>  
  <%- include('./layout/footer.ejs') %>
<%- include('./layout/header.ejs') %>
<div class="">
  <div class="row min-vh-100">
    <div class="col-sm-2">
      <div class="d-flex flex-column min-vh-100">
        <div>
          <h3>JOB REQUIREMENT</h3>
        </div>
        <div>
          <h3>JOB DETAILS</h3>
        </div>
        <div>
          <a href="/exam">EXAM</a>
        </div>
        <div class="mt-auto">
          <h3>BACK TO JOB PAGE</h3>
        </div>
      </div>
    </div>
    <div class="col-sm-10">
      <h4>CREATE JOB DETAILS</h4>
      <% for (let i = 0; i < job.length; i++) { %>
      <form class="" action="/job-details/<%= job[i].job_id %>" method="post">
        <h3><%= job[i].job_title %></h3>
        <div>
          <label for="role">Role</label>
          <div>
            <% if (role != 0) { %>
              <%= role[0].role_id %> 
            <% } %>  
          <div class="">
            <input
              type="text"
              name="role"
              placeholder="Enter a Role"
              required
            />
          </div>
        </div>
        <div>
          <div class="">
            <label for="responsiDesc">Responsibility</label>
            <% for (let j = 0; j < responsi.length; j++) { %>
            <li><%= responsi[j].item_description %></li>
            <% } %>
            <input
              type="text"
              name="responsiDesc"
              placeholder="Enter a responsibility"
            />
            <button name="button" value="responsiBtn">+</button>
          </div>
          <div>
            <label for="qualiDesc">Qualification</label>
            <% for (let j = 0; j < quali.length; j++) { %>
            <li><%= quali[j].item_description %></li>
            <% } %>
            <input
              type="text"
              name="qualiDesc"
              placeholder="Enter a qualification"
            />
            <button name="button" value="qualiBtn">+</button>
          </div>

          <input type="text" name="category" placeholder="Add a category" />
          <button name="button" value="categoryBtn">+</button>
          <div><button name="button" value="saveBtn">SAVE</button></div>
        </div>
      </form>
      <% } %>
    </div>
  </div>
</div>  
  <%- include('./layout/footer.ejs') %>
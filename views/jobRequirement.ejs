<%- include('./layout/header.ejs') %>
<div class="row min-vh-100">
  <div class="col-sm-2">
    <div class="d-flex flex-column min-vh-100">
      <div>
        <a href="/job-requirement">JOB REQUIREMENT</a>
      </div>
      <div>
        <a href="/job-details">JOB DETAILS</a>
      </div>
      <div>
        <a href="/exam">EXAM</a>
      </div>
      <div class="mt-auto">
        <a href="/">BACK TO JOB PAGE</a>
      </div>
    </div>
  </div>

  <div class="col-sm-10">
    <h3>NEW JOB OPENING</h3>
    <form method="POST" action="/job-requirement" >
      <label for="jobtitle">JOB TITLE</label><br />
      <input type="text" id="jobTitle" name="jobTitle" required/><br />
    
    <br />
    
      <label for="department">DEPARTMENT</label>
      <select name="department" id="deparment" >
        <option value="1">Select</option>
        <option value="2">Idkkkk</option>
        <option value="3">Idkkkkk</option>
        <option value="4">Idkkkk</option>
      </select>
      <br />
    
    <br />
    
      <label for="salary range">SALARY RANGE</label>
      <select name="salaryRange" id="salary range" >
        <option value="1">Select</option>
        <option value="2">Idkkkk</option>
        <option value="3">Idkkkkk</option>
        <option value="4">Idkkkk</option>
      </select>
      <br />
    
    <br />
    
      <label for="career level">CAREER LEVEL</label>
      <select name="careerLevel" id="career level" >
        <option value="1">Select</option>
        <option value="2">Idkkkk</option>
        <option value="3">Idkkkkk</option>
        <option value="4">Idkkkk</option>
      </select>
      <br />
    
    <br />
    
      <label for="work type">WORK TYPE</label>
      <select name="workType" id="work type" >
        <option value="1">Select</option>
        <option value="2">Idkkkk</option>
        <option value="3">Idkkkkk</option>
        <option value="4">Idkkkk</option>
      </select>
      <br /><br />
    
    
      <label for="jobdesc">JOB DESCRIPTION</label><br />
      <input type="text" id="jobdesc" name="jobDesc" required/>
    
    <br />
    <h4>MINIMUM QUALIFICATIONS</h4>
    
      <label for="years">YEARS OF EXPERIENCE</label><br />
      <input type="text" id="years" name="yearsOfExp" required/><br />
    
    <br />
    
      <label for="exam score">EXAM SCORE</label><br />
      <input type="text" id="exam score" name="examScore" required/><br />
    
    <br />
    
      <label for="hr">HR ASSESSMENT</label>
      <select name="hrAssessment" id="hr" >
        <option value="1">Select</option>
        <option value="2">Idkkkk</option>
        <option value="3">Idkkkkk</option>
        <option value="4">Idkkkk</option>
      </select>
      <br /><br />
    
    <h5>PROGRAMMING LANGUAGES, IDE AND FRAMEWORKS</h5>
      <% for(let i=0; i < skill.length; i++) { %>
        <div>
        <input
          type="checkbox"
          id="<%= skill[i].skill_name %>"
          name="<%= skill[i].skill_name %>"
          value="<%= skill[i].skill_name %>"
        />
        <label for="<%= skill[i].skill_name %>">
          <%= skill[i].skill_name %></label
        >
        <input type="radio" id="1" name="level <%= i %>" value="1" />
        <label for="1">1</label>
        <input type="radio" id="2" name="level <%= i %>" value="2" />
        <label for="2">2</label>
        <input type="radio" id="3" name="level <%= i %>" value="3" />
        <label for="3">3</label>
        <input type="radio" id="4" name="level <%= i %>" value="4" />
        <label for="4">4</label>
        <input type="radio" id="5" name="level <%= i %>" value="5" />
        <label for="5">5</label>
        </div>
      <% } %> 
      <div>
        <h6>EXAM</h6>
        <ul>
          <li>
            What is wrong with this line of code?<span class="close">x</span>
          </li>
          <li>
            What is the correct code to check if a data table is empty?<span
              class="close"
              >x</span
            >
          </li>
        </ul>
      </div>
      <button>SAVE</button>
    </form>
    </div>
  </div>
</div>
<%- include('./layout/footer.ejs') %>

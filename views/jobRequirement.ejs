<%- include('./layout/header.ejs') %>
<div class="row min-vh-100">
  <div class="col-sm-2">
    <div class="d-flex flex-column min-vh-100">
      <div>
        <a href="/job-requirement">JOB REQUIREMENT</a>
      </div>
      <div>
        <p>JOB DETAILS</p>
      </div>
      <div>
        <p>EXAM</p>
      </div>
      <div class="mt-auto">
        <a href="/">BACK TO JOB PAGE</a>
      </div>
    </div>
  </div>
    
  <div class="col-sm-10">
    <h3>NEW JOB OPENING</h3>
    <form method="POST" action="/job-requirement" >
      <div>
        <label for="jobId">JOB ID</label> <br>
        <input type="number"  name="jobId" value="<%= unique %>" readonly>
      </div>
      <br>
      <div>
        <label for="jobtitle">JOB TITLE</label><br />
        <input type="text" name="jobTitle" required>
      </div>
      <br>
      <div>
        <label for="career level">CAREER LEVEL</label>
        <select name="careerLevel" id="career level" >
          <option hidden value="">Select a career level</option>
          <% for(let i = 0; i < positionLevel.length; i++) { %>
            <option value="<%= positionLevel[i].position_level_name %>" ><%= positionLevel[i].position_level_name %></option>
          <% } %>
        </select>
      </div>
      <br>
      <div>
        <label for="department">DEPARTMENT</label>
        <select name="department" id="department" required>
          <option hidden value="">Select a department</option>
          <% for(let i = 0; i < dept.length; i++) { %>
          <option value="<%= dept[i].dept_id %>" ><%= dept[i].dept_name %></option>
          <% } %>
        </select>
      </div>
      <br>
      <div>
        <label for="salary range">SALARY RANGE</label>
        <input type="number" min="1" name="salaryRange" id="salary range" required>
      </div>
      <br>
      <div>
        <label for="work type">WORK TYPE</label>
        <select name="workType" id="worktype" required>
          <option hidden value="">Select a work type</option>
          <% for(let i = 0; i < jobType.length; i++) { %>
            <option value="<%= jobType[i].job_type_name %>" ><%= jobType[i].job_type_name %></option>
          <% } %>
        </select>
      </div>
      <br>
      <div>
        <label for="jobdesc">JOB DESCRIPTION</label><br />
        <input type="text" id="jobdesc" name="jobDesc" />
      </div>
      <br>
    <h4>MINIMUM QUALIFICATIONS</h4>
    
      <div>
        <label for="years">YEARS OF EXPERIENCE</label><br />
        <input type="number" min="0" id="years" name="yearsOfExp" required/>
      </div>
      <br>
      <div>
        <label for="skill score">SKILL SCORE</label><br />
        <input type="number" min="0" id="skill score" name="skillScore" required/>
      </div>
      <br>
     <div>
       <label for="personality score">PERSONALITY SCORE</label><br />
       <input type="number" min="0" id="personality score" name="personalityScore" required/>
     </div>
      <br>
    <h5>PROGRAMMING LANGUAGES, IDE AND FRAMEWORKS</h5>
      <% for(let i=0; i < adminSkill.length; i++) { %>
        <div class="skilltype <%= adminSkill[i].skill_type %>">
        <input
          type="checkbox"
          id="checkbox-<%= adminSkill[i].skill_id %>"
          name="skill_id"
          value="<%= adminSkill[i].skill_id %>"
          onclick="selectDefaultRadio('<%= adminSkill[i].skill_id %>')"
        />
        <label for="<%= adminSkill[i].skill_name %>">
          <%= adminSkill[i].skill_name %></label
        >
        <input 
          type="radio" 
          name="skill_level[<%= adminSkill[i].skill_id %>]" 
          value="1"
          id="radio-1-<%= adminSkill[i].skill_id %>"
          class="radio-<%= adminSkill[i].skill_id %>"
          onclick="autoCheckBox('<%= adminSkill[i].skill_id %>')"
          />
        <label for="1">1</label>

        <input 
          type="radio" 
          id="2" 
          name="skill_level[<%= adminSkill[i].skill_id %>]" 
          value="2"
          class="radio-<%= adminSkill[i].skill_id %>"
          onclick="autoCheckBox('<%= adminSkill[i].skill_id %>')"
        />
        <label for="2">2</label>

        <input 
          type="radio" 
          id="3" 
          name="skill_level[<%= adminSkill[i].skill_id %>]" 
          value="3"
          class="radio-<%= adminSkill[i].skill_id %>"
          onclick="autoCheckBox('<%= adminSkill[i].skill_id %>')"
        />
        <label for="3">3</label>

        <input 
          type="radio" 
          id="4" 
          name="skill_level[<%= adminSkill[i].skill_id %>]" 
          value="4"
          class="radio-<%= adminSkill[i].skill_id %>"
          onclick="autoCheckBox('<%= adminSkill[i].skill_id %>')" 
        />
        <label for="4">4</label>

        <input 
          type="radio" 
          id="5" 
          name="skill_level[<%= adminSkill[i].skill_id %>]" 
          value="5"
          class="radio-<%= adminSkill[i].skill_id %>"
          onclick="autoCheckBox('<%= adminSkill[i].skill_id %>')"
        />
        <label for="5">5</label>
        </div>
      <% } %> 
      <div>
        <h5>EXAM</h5>
        <ul>
          <h6>NO SELECTED EXAMS!</h6>
          <h6>SELECT LATER IN THE EXAM TAB ON THE SIDEBAR AFTER SAVING</h6>
        </ul>
      </div>
      <h7>Status</h7>
      <div>
        <input type="radio" id="Draft" name="status" value="1" checked>
         <label for="Draft">Draft</label>
        <input type="radio" id="Active" name="status" value="0">
          <label for="Active">Active</label>
        <input type="radio" id="Archive" name="status" value="2">
          <label for="Archive">Archive</label>
      </div><br>
      <button>SAVE</button>
    </form>
    </div>
  </div>
</div>


<%- include('./filterFunctions/jrDepartmentFilter.ejs') %>
<%- include('./layout/footer.ejs') %>

<script>
  function technicalShowHide(){
    const technicalBtn = document.querySelector('#technical-btn');
    const choiceValueInput = document.querySelectorAll('.choice-value-input');
    const timerLevelCategoryInput= document.querySelectorAll('.technical-input');
    const levelToOne = document.querySelector('#level');
    const timerToNone = document.querySelector('#time');
    const correctRadioEnable = document.querySelectorAll('#radioForCorrect');
    const categoryToNull = document.querySelector('#categoryPicker');
    const showCategory = document.querySelector('#inputCategory');
    
    if(technicalBtn.checked == true){
      choiceValueInput.forEach(choiceValue => {
        choiceValue.classList.add('d-none');
        choiceValue.value = 0;
      })
      correctRadioEnable.forEach(choiceValue3 =>{
        choiceValue3.required= true;
        choiceValue3.classList.remove('d-none');
      })
      timerLevelCategoryInput.forEach(choiceValue2 => {

    const levelToZero = document.querySelector('#level');
    const correctRadioDisable = document.querySelectorAll('#radioForCorrect');
    const hideCategory = document.querySelector('#inputCategory');
   

    if(personalityBtn.checked == true){
      choiceValueInput.forEach(choiceValue => {
        choiceValue.classList.remove('d-none');
        choiceValue.value = '';
      })

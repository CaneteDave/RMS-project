<script>
    function technicalShowHide(){
      const technicalBtn = document.querySelector('#technical-btn');
      const choiceValueInput = document.querySelectorAll('.choice-value-input');
      const timerLevelCategoryInput= document.querySelectorAll('.technical-input');
      const levelToOne = document.querySelector('#level');
      const timerToNone = document.querySelector('#time');
      const correctRadioEnable = document.querySelectorAll('#radioForCorrect');
      const categoryToFirst = document.querySelector('#categoryPicker');
      if(technicalBtn.checked == true){
        choiceValueInput.forEach(choiceValue => {
          choiceValue.classList.add('d-none');
          choiceValue.value = 0;
        })
        correctRadioEnable.forEach(choiceValue3 =>{
          choiceValue3.required= true;
          choiceValue3.classList.remove('d-none');
        })
        timerLevelCategoryInput.forEach(choiceValue2 => {
          choiceValue2.classList.remove('d-none');
        })
        timerToNone.value = '';
        levelToOne.value='1';
        categoryToFirst.value = 'Select a Category';
      }
    }
    
    function personalityShowHide(){
      const personalityBtn = document.querySelector('#personality-btn');
      const choiceValueInput = document.querySelectorAll('.choice-value-input');
      const timerLevelCategoryInput= document.querySelectorAll('.technical-input');
      const categoryToPersonality = document.querySelector('#categoryPicker');
      const timerToZero = document.querySelector('#time');
      const levelToZero = document.querySelector('#level');
      const correctRadioDisable = document.querySelectorAll('#radioForCorrect');
  
      if(personalityBtn.checked == true){
        choiceValueInput.forEach(choiceValue => {
          choiceValue.classList.remove('d-none');
          choiceValue.value = '';
        })
        timerLevelCategoryInput.forEach(choiceValue2 =>{
          choiceValue2.classList.add('d-none');
        })
        correctRadioDisable.forEach(choiceValue3 =>{
          choiceValue3.required= false;
          choiceValue3.classList.add('d-none');
        })
        categoryToPersonality.value = 'Personality';

        timerToZero.value = '0';
       
        levelToZero.value = '0';
      }
    }
  
    technicalShowHide();
    personalityShowHide();
  </script>


<script>
    function showAllFunction() {
        const allJobs = document.querySelectorAll('.all-btn');
        allJobs.forEach((element) => {
            element.classList.remove('d-none');
        });
    }
    function toggleShowHide(dept_id) {
        const allDept = document.querySelectorAll('.dept');
        const target = document.querySelectorAll(`.dept-${dept_id}-btn`);
        allDept.forEach((element) => {
            element.classList.add('d-none');
        });
        target.forEach((element) => {
            element.classList.remove('d-none');
        });
    }

    // buttons changing style onclick
    $('.buttons button').click(function(){
      $('.buttons button').addClass('bg-transparent');
      $('.buttons button').removeClass('active-btn');
      $(this).removeClass('bg-transparent')
      $(this).addClass('active-btn')
    })
</script>
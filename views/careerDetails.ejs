<%- include('./layout/header2.ejs') %>
<div style="padding-top: 15vh; background-color: #005277;">
  <h1 class="text-center best-header" style="color: white;">#BestPlaceToWork</h1>
  <p class="text-center mb-0" style="color: white;">Careers</p>
</div>
<div class="container-fluid m-0">
  <div class="row">
    <div class="content-title text-left col-9 p-4" style="background-color: #ededed;">
    
      <% for( let i = 0; i < jobOpening.length; i++){ %> 
        <div
          <% for (let j=0; j < admin_department.length; j++) { %> 
            <% if(jobOpening[i].job_dept == admin_department[j].dept_name) {%>
              <% let noSpaceDept =  admin_department[j].dept_name.replace(/\s/g, ''); %> 
              class="all-jobs <%= noSpaceDept %>"
            <% } %> 
          <% } %> 
        >
        <!-- date -->
        <div class="pb-1">
        <% for( let i = 0; i < jobOpening.length; i++){ %> 
        <span>Date Posted:<%= date %></span>   
        </div>
        <% } %>
       <!-- job title -->
        <div class="job-title pb-3">
          <h1><%= jobOpening[i].job_title %> </h2>
        </div>
      <!-- job skill -->
        <div class="d-flex">
          <% for (let j=0; j < jobSkill.length; j++) { %>
              <% if(jobOpening[i].job_id == jobSkill[j].job_id) {%> 
                <div class="skill-item border px-2 py-1 me-1" style="background-color: #fff;">
                  <%= jobSkill[j].skill_name %>
                </div>
              <% } %>
          <% } %>
        </div>
  
        <!-- job role -->
        <div class="pb-4">
          <% for (let j=0; j < jobDetail.length; j++) { %>
            <p> <%= jobDetail[j].role %>  </p>
          <% } %>
        </div>
        <!-- job description -->
      <div class="pb-4">
        <h3 style="color: #4383B6;">Job Description</h3>
        <p><%= jobOpening[i].job_description %> </p>
      </div>
    <%} %>
      <!-- job responsibilities -->
      <div class="pb-4">
        <h3 style="color: #4383B6;">Responsibilities</h3>
        <ul style="list-style-type: square;">
          <% for(let i = 0; i < responsibility.length; i++ ){ %>
            <li><%= responsibility[i].responsibility_detail %></li>
          <% } %> 
        </ul>
      </div>
      <!-- qualification-->
      <div class="pb-4">
        <h3 style="color: #4383B6;">Qualification</h3>
        <ul style="list-style-type: square;">
          <% for(let i = 0; i < qualification.length; i++ ){ %>
            <li><%= qualification[i].qualification_detail %> </li>
          <% } %> 
        </ul>
      </div>
  <!-- categories-->
      <% for(let i = 0; i < category.length; i++ ){ %>
      <div class="pb-4">
        <h3><%= category[i].category_detail %> </h3>
        <% for(let j = 0; j < item.length; j++ ){ %>
          <%  if (category[i].category_id == item[j].category_id){  %> 
              <li> <%= item [j].item_detail %> </li>
          <% } %> 
        <% } %> 
      </div>
      <% } %> 
  
    <div class="button-wrapper">
      <a href="/careers/job/<%= jobId %>/resume"><button class="btns">Apply Now</button></a>
    </div>
  </div>
  </div>
  
  <!-- active jobs tags -->
    <div class="sidebar-column col" style="background-color: #fff; padding: 50px 40px 0px;">
      <h3 class="sidebar-title side-head pb-4 mb-4" style="color: #4383B6; font-size: 1.2rem;">Career Opportunities<br/>@FilAmSoftware</h3>
  <% for( let i = 0; i < active_job_opening.length; i++){ %> 
    <ul class="p-0">
      <a href="/careers/job/<%= active_job_opening[i].job_id %>" style="text-decoration:none; color: black;">
        <%=active_job_opening[i].job_title %> <hr>
      </a>
    </ul>
  <% } %>
  </div>
  </div>
</div>

<%- include('./layout/footer2.ejs') %> 


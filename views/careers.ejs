<%- include('./layout/header2.ejs')  %>  
  
<div class="columns">       
  <div class="d-flex mr-2">
    <div id ="buttons">
      <button onclick="showAllFunction()">Show All</button>
     <% for (let  i = 0; i < admin_department.length; i++) { %>
      <% let noSpaceDept = admin_department[i].dept_name.replace(/\s/g, ''); %>
    <button onclick="toggleShowHide('<%= noSpaceDept %>')">
      <%= admin_department[i].dept_name %>
    </button>
    <% } %>
  </div>
  </div>
  
  <div class="container">
    <div class="row">
        <% for (let i = 0; i < job_opening.length; i++) { %>
          <% let noSpaceDept = job_opening[i].job_dept.replace(/\s/g, ''); %>
          <div class ="all-btn <%= noSpaceDept %>-btn dept col-lg-3 col-md-4 col-sm-12">  
            <span><%= date_opened %></span>    
            <h1><%= job_opening[i].job_title %></h1>
            <a href="/careers/job/<%= job_opening[i].job_id %>"><button class="btns">Apply Now</button></a>
          </div>  
        <% } %>
    </div>
  </div>

</div>   

  

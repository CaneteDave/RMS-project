<%- include('./layout/header2.ejs')  %>  
  
<div class="columns">       
  <div class="d-flex mr-2">
    <div id ="buttons">
      <button onclick="showAllFunction()">Show All</button>
     <% for (let  i = 0; i < admin_department.length; i++) { %>
    <button onclick="toggleShowHide('<%= admin_department[i].dept_id %>')">
      <%= admin_department[i].dept_name %>
    </button>
    <% } %>
  </div>
  </div>
</br>
</br>
  <div class="container">
    <% if (active_job_opening != 0) { %> 
    <div class="row">
        <% for (let i = 0; i < active_job_opening.length; i++) { %>
          <div class ="all-btn dept-<%= active_job_opening[i].job_dept %>-btn dept col-lg-3 col-md-4 col-sm-12">
            <span><%= date %></span>   
            <h1><%= active_job_opening[i].job_title %></h1>
            <div class="d-flex" style="gap: 5px;">
              <% for (let j=0; j < jobSkill.length; j++) { %>
                <% if(active_job_opening[i].job_id == jobSkill[j].job_id) {%> 
                  <div style="padding: 0 5px;">

                    <span><%= jobSkill[j].skill_name %></span>
                  </div>
                  <% } %>
              <% } %>
            </div>
          </br>
        </br>
            <a href="/careers/job/<%= active_job_opening[i].job_id %>"><button class="btns">Apply Now</button></a>
          </div>  
        <% } %>
    </div>
    <% } else{  %> 
      <h5> NO ACTIVE JOBS </h5>
    <% } %> 
  
  </div>
</div>
  
